#Nginx configuration, placeholders are replaced with envsubst

upstream app {
    server ${UPSTREAM};
}

server {
    listen 80;
    listen [::]:80;

    server_name ${HOSTNAME};

    location / {
        root /usr/share/nginx/html;
        try_files $uri /index.html;
        index index.html;
    }

    location /api {
        proxy_pass  http://app;
    }
}
