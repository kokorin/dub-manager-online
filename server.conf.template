#Nginx configuration, placeholders are replaced with envsubst

upstream app {
    server ${UPSTREAM};
}

server {
    listen ${PORT};
    listen [::]:${PORT};

    server_name ${HOSTNAME};

    location / {
        root /usr/share/nginx/html;
        try_files $uri /index.html;
        index index.html;
    }

    location /api {
        proxy_pass  http://app;
    }
}
