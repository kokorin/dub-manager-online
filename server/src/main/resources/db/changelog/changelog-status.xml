<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
                   logicalFilePath="changelog-base.xml">

    <changeSet id="create-tracked-anime-status-enum" author="kokorin">
        <createTable tableName="tracked_anime_status_enum">
            <column name="status" type="VARCHAR(32)">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="fill-tracked-anime-status-enum" author="kokorin">
        <insert tableName="tracked_anime_status_enum">
            <column name="status" value="NOT_STARTED"/>
        </insert>
        <insert tableName="tracked_anime_status_enum">
            <column name="status" value="IN_PROGRESS"/>
        </insert>
        <insert tableName="tracked_anime_status_enum">
            <column name="status" value="COMPLETED"/>
        </insert>
    </changeSet>

    <changeSet id="create-tracked-anime" author="kokorin">
        <createTable tableName="tracked_anime">
            <column name="anime_id" type="BIGINT">
                <constraints primaryKey="true"
                             foreignKeyName="fk_anime_status_to_anime"
                             referencedTableName="anime" referencedColumnNames="id"/>
            </column>
            <column name="user_email" type="VARCHAR(64)">
                <constraints primaryKey="true"
                             foreignKeyName="fk_anime_status_to_user"
                             referencedTableName="dmo_user" referencedColumnNames="email"/>
            </column>
            <column name="status" type="VARCHAR(32)" defaultValue="NOT_STARTED">
                <constraints nullable="false"
                             foreignKeyName="fk_anime_status_to_tracked_anime_status_enum"
                             referencedTableName="tracked_anime_status_enum" referencedColumnNames="status"/>
            </column>
            <column name="completed_episode_count" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="total_episodes" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="next_not_started_episode_air_date" type="DATE"/>
            <column name="comment" type="VARCHAR(4096)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-episode-status" author="kokorin">
        <createTable tableName="tracked_episode">
            <column name="episode_id" type="BIGINT">
                <constraints primaryKey="true"
                             foreignKeyName="fk_episode_status_to_episode"
                             referencedTableName="episode" referencedColumnNames="id"/>
            </column>
            <column name="user_email" type="VARCHAR(64)">
                <constraints primaryKey="true"
                             foreignKeyName="fk_episode_status_to_user"
                             referencedTableName="dmo_user" referencedColumnNames="email"/>
            </column>
            <column name="completed" type="BIT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
